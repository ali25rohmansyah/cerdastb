<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ListMateriFragment">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/Recycle_materi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:layout_margin="2pt"
            android:layout_above="@id/btn_posttest">

        </android.support.v7.widget.RecyclerView>


        <Button
            android:id="@+id/btn_posttest"
            android:text="Ayo Post Test"
           android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ripple_effect_redd"
            android:textColor="@color/yellow"
            android:textAllCaps="false"
            android:textSize="18dp"/>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:progressBackgroundTint="@color/solidRed"
            android:progressTint="@color/red"
            android:padding="5dp"
            android:progress="0" />

</RelativeLayout>